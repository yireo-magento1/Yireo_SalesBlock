<config>

    <modules>
        <Yireo_SalesBlock>
            <version>0.1.0</version>
        </Yireo_SalesBlock>
    </modules>

    <global>
        <blocks>
            <salesblock>
                <class>Yireo_SalesBlock_Block</class>
            </salesblock>
        </blocks>

        <helpers>
            <salesblock>
                <class>Yireo_SalesBlock_Helper</class>
            </salesblock>
        </helpers>

        <models>
            <salesblock>
                <class>Yireo_SalesBlock_Model</class>
                <resourceModel>salesblock_mysql4</resourceModel>
            </salesblock>
            <salesblock_mysql4>
                <class>Yireo_SalesBlock_Model_Mysql4</class>
                <entities>
                    <rule>
                        <table>salesblock_rule</table>
                    </rule>
                </entities>
            </salesblock_mysql4>
        </models>

        <resources>
            <salesblock_setup>
                <setup>
                    <module>Yireo_SalesBlock</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </salesblock_setup>
            <salesblock_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </salesblock_write>
            <salesblock_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </salesblock_read>
        </resources>

        <events>
            <controller_action_predispatch>
                <observers>
                    <salesblock_controller_action_predispatch>
                        <type>singleton</type>
                        <class>Yireo_SalesBlock_Model_Observer</class>
                        <method>controllerActionPredispatch</method>
                    </salesblock_controller_action_predispatch>
                </observers>
            </controller_action_predispatch>
            <core_block_abstract_to_html_after>
                <observers>
                    <salesblock_core_block_abstract_to_html_after>
                        <type>singleton</type>
                        <class>Yireo_SalesBlock_Model_Observer</class>
                        <method>coreBlockAbstractToHtmlAfter</method>
                    </salesblock_core_block_abstract_to_html_after>
                </observers>
            </core_block_abstract_to_html_after>
           <sales_quote_save_before>
                <observers>
                    <salesblock_sales_quote_save_before>
                        <type>singleton</type>
                        <class>Yireo_SalesBlock_Model_Observer</class>
                        <method>salesQuoteSaveBefore</method>
                    </salesblock_sales_quote_save_before>
                </observers>
            </sales_quote_save_before>
           <sales_order_place_before>
                <observers>
                    <salesblock_sales_order_place_before>
                        <type>singleton</type>
                        <class>Yireo_SalesBlock_Model_Observer</class>
                        <method>salesOrderPlaceBefore</method>
                    </salesblock_sales_order_place_before>
                </observers>
            </sales_order_place_before>
        </events>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Yireo_SalesBlock>
                    <files>
                        <default>Yireo_SalesBlock.csv</default>
                    </files>
                </Yireo_SalesBlock>
            </modules>
        </translate>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <salesblock translate="title" module="salesblock">
                                            <title>SalesBlock Section</title>
                                        </salesblock>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <salesblock after="Mage_Adminhtml">Yireo_SalesBlock</salesblock>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <frontend>
        <routers>
            <salesblock>
                <use>standard</use>
                <args>
                    <module>Yireo_SalesBlock</module>
                    <frontName>salesblock</frontName>
                </args>
            </salesblock>
        </routers>
        <layout>
            <updates>
                <salesblock>
                    <file>salesblock.xml</file>
                </salesblock>
            </updates>
        </layout>
        <translate>
            <modules>
                <Yireo_SalesBlock>
                    <files>
                        <default>Yireo_SalesBlock.csv</default>
                    </files>
                </Yireo_SalesBlock>
            </modules>
        </translate>
    </frontend>

    <default>
        <salesblock>
            <settings>
                <enabled>1</enabled>
                <custom_page>0</custom_page>
                <cmspage></cmspage>
            </settings>
        </salesblock>
    </default>
</config>
